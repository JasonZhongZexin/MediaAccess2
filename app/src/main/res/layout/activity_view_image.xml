<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewImage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350dp"
        android:layout_height="350dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnreturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="287dp"
        android:onClick="onReturnMainClick"
        android:text="Return"
        android:visibility="visible" />

    <Button
        android:id="@+id/btngrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="284dp"
        android:layout_toEndOf="@+id/btnreturn"
        android:onClick="onGreyingClick"
        android:text="Greying" />

    <Button
        android:id="@+id/btnundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="282dp"
        android:layout_toEndOf="@+id/btngrey"
        android:onClick="onUndoClick"
        android:text="Undo" />

</RelativeLayout>